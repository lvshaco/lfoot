#!/bin/bash 
NAME=local_dev

start() {
    if [ ! "$(docker ps -q -f name=$NAME)" ]; then
        if [ ! "$(docker ps -aq -f status=exited -f name=$NAME)" ]; then
            docker run -itd -w /root -v /Users/lvshaco:/root/share:ro --name local_dev lvsgame/centos7 /bin/bash
        else
            docker start $NAME
        fi
	fi
}

stop() {
    docker stop $NAME
}

login() {
    start
    docker exec -w /root -it $NAME /bin/bash
}

cmd=$1
shift
case $cmd in
    start) 		start;;
	stop)		stop;;
	login)		login;;
    *) echo "Usage: $0 start|stop|login";;
esac
