#!/bin/bash 
dir=$(cd $(dirname $BASH_SOURCE) && pwd)
cmd=$1
shift
case $cmd in
    fanyi) cd $dir && ./fanyi $@;;
    ctime) python -c "import time; print time.ctime($@)";;
	mount_ddz) sshfs local_dev:/home/lxj/lddz ~/lddz;;
	lddz) scp local_dev:~/protocol.proto local_dev:~/lddz/lualib/share/error.lua local_dev:~/lddz/lualib/room/card.lua local_dev:~/lddz/res/json/recharge.json ~;;
    pass) cat ~/Dropbox/pass;;
    edit) vim $dir/lfoot;;
    ci) cd $dir && git commit -a -m "$1" && git push;;
    *) echo unkown command;;
esac
